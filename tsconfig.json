{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "preserve",
    "paths": {
      "+infra": ["./infra/index"],
      "+infra/*": ["./infra/*"],
      "+app": ["./app/index"],
      "+app/*": ["./app/*"],
      "+languages": ["./modules/supported-languages.ts"]
    },
    "types": ["./node_modules/@bgord/design/dist/index.d.ts", "@types/bun"]
  },
  "exclude": ["bgord-scripts"]
}
